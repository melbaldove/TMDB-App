<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="io.melbybaldove.investagramsexam.ui.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_login"
            app:destination="@id/loginActivity" />
        <action
            android:id="@+id/action_movieDetail"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="io.melbybaldove.investagramsexam.ui.home.moviedetail.MovieDetailFragment"
        android:label="MovieDetailFragment">
        <argument
            android:name="movieId"
            app:argType="string"
            />
    </fragment>

    <activity
        android:id="@+id/loginActivity"
        android:name="io.melbybaldove.investagramsexam.ui.login.LoginActivity"
        android:label="LoginActivity" />
</navigation>